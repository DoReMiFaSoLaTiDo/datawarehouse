<p id="notice"><%= notice %></p>

<h1>Listing Transaction Logs</h1>

<table>
  <thead>
    <tr>
      <th>Tran type</th>
      <th>Amount</th>
      <th>Account</th>
      <th>Salesperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_logs.each do |transaction_log| %>
      <tr>
        <td><%= transaction_log.tran_type %></td>
        <td><%= transaction_log.amount %></td>
        <td><%= transaction_log.account.account_name %></td>
        <td><%= transaction_log.salesperson.name %></td>
        <td><%= link_to 'Show', transaction_log %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction_log) %></td>
        <td><%= link_to 'Destroy', transaction_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

